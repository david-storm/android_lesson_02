<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="info_text">
        <item name="android:fontFamily">@font/inder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_info</item>
    </style>

    <style name="edit_text">
        <item name="android:fontFamily">@font/inder</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColorHint">#AD000000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_info</item>
        <item name="android:background">@drawable/custom_edit_text</item>
    </style>

    <style name="custom_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>

    <style name="text_pattern">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inder</item>
    </style>
</resources>