<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient android:angle="45" android:endColor="#0f711c" android:startColor="#0ec426" />
            <stroke android:width="4dp" android:color="#04ff00" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="45" android:endColor="#390f71" android:startColor="#0099ff" />
            <corners android:radius="20dp" />
            <stroke android:width="4dp" android:color="#0099ff" />
        </shape>
    </item>
</selector>